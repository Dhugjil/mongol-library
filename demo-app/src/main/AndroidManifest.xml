<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.studymongolian.mongollibrarydemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/mongol_label_activity_title"
                  android:name=".MongolLabelActivity"/>
        <activity android:label="@string/mongol_textview_activity_title"
                  android:name=".MongolTextViewActivity"/>
        <activity android:label="@string/mongol_edittext_activity_title"
                  android:name=".MongolEditTextActivity"/>
        <activity android:label="Testing"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:name=".TestingActivity"/>
        <activity android:label="@string/unicode_activity_title"
                  android:name=".UnicodeActivity"/>
        <activity android:label="@string/convert_code_activity_title"
                  android:name=".ConvertCodeActivity"/>
        <activity android:label="@string/mongol_font_activity_title"
                  android:name=".MongolFontActivity"/>
        <activity android:label="@string/keyboard_activity_title"
                  android:name=".KeyboardActivity"/>
        <activity android:label="@string/mongol_toast_activity_title"
                  android:name=".MongolToastActivity"/>
        <activity android:label="@string/mongol_button_activity_title"
                  android:name=".MongolButtonActivity"/>
        <activity android:label="@string/mongol_alert_dialog_activity_title"
                  android:name=".MongolAlertDialogActivity"/>
    </application>

</manifest>