<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MongolTextView">
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="gravity">
            <!-- these are the same values as the Android Gravity constants -->
            <flag name="top" value="48" />
            <flag name="center" value="17" />
            <flag name="bottom" value="80" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MongolEditText">
        <attr name="cursorVisible" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MongolLabel">
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
    </declare-styleable>

    <declare-styleable name="Keyboard">
        <attr name="displayName" format="string"/>
        <attr name="fontAssetFile" format="string"/>
        <attr name="primaryTextSize" format="dimension"/>
        <attr name="primaryTextColor" format="color"/>
        <attr name="secondaryTextColor" format="color"/>
        <attr name="keyImageTheme">
            <enum name="dark" value="0" />
            <enum name="light" value="1" />
        </attr>
        <attr name="keyColor" format="color"/>
        <attr name="keyPressedColor" format="color"/>
        <attr name="keyBorderColor" format="color"/>
        <attr name="keyBorderWidth" format="dimension"/>
        <attr name="keyBorderRadius" format="dimension"/>
        <attr name="keySpacing" format="dimension"/>
        <attr name="popupBackgroundColor" format="color"/>
        <attr name="popupHighlightColor" format="color"/>
        <attr name="popupTextColor" format="color"/>
        <attr name="candidatesLocation">
            <flag name="none" value="0" />
            <!-- these are derived from the Android Gravity constants -->
            <flag name="vertical_left" value="0x73" />
            <flag name="horizontal_top" value="0x31" />
        </attr>
    </declare-styleable>

