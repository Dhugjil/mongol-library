<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <net.studymongolian.mongollibrary.MongolEditText
            android:id="@+id/editText"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <net.studymongolian.mongollibrary.ImeContainer
            android:id="@+id/imeContainer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <Button
        android:text="Test Backspace Key"
        android:id="@+id/testDeleteKey"
        android:onClick="onTestDeleteKeyClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>